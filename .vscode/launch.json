{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI (Hypercorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "hypercorn",
      "args": [
        "main:app", // Replace with your app import path
        "--reload", // Enables auto-reload on code changes
        "--bind",
        "127.0.0.1:8000", // Host and port
        "--debug" // Enables debug mode
      ],
      "cwd": "${workspaceFolder}", // Set working directory if needed
      "env": {
        "DEBUGPY_LOG_DIR": "${workspaceFolder}/.debug_logs",
        "PYTHONVERBOSE": "1" // propagate verbosity into the debugged process
      },
      "logToFile": true, // VS Code writes adapter-side logs
      "justMyCode": false
    },
    {
      "name": "Python: FastAPI (Hypercorn, run.py)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run.py",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: FastAPI (Uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--reload", "--host", "127.0.0.1", "--port", "8000"],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Attach by Port",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678 // use the same port you passed to --listen
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "." // keep “.” for local debugging
        }
      ],
      "justMyCode": false,
      "logToFile": true
    }
  ]
}
